{
    // "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./src-js",
        "target": "ESNEXT",
        "module": "ESNEXT",
        "noEmit": false,
        "sourceMap": false,
        "allowJs": true,
        "checkJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["es6"],
        "moduleResolution": "node",
        "noEmitOnError": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true,
        "strict": true,
        "noImplicitAny": false
    },
    "include": ["src/**/*"]
}
